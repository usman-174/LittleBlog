<%- include('../../partials/head.ejs') %>
<!-- START CODE HERE WITH BODY TAG -->

<body>
  <%- include('../../partials/navbar.ejs') %>

  <div class="container">
    <% if(count == 0){ %> <% if(user){ %>
    <div class="row nodata text-primary">
      <div class="col-12">
        <h1>
          Currently there is not Data available to show.Please Add some data.
        </h1>
      </div>
    </div>
    <% }else{ %>
    <div class="row nodata text-primary">
      <div class="col-12">
        <h1>Currently there is not Data available to show</h1>
      </div>
    </div>
    <% }%> <% } else{%>
    <div class="row my-4">
      <div class="col-12 text-center text-success">
        <h1 class="text-uppercase display-4 font-weight-bold">Blogs</h1>
      </div>
    </div>
    <% } %>

    <div class="row">
      <div class="col-md-12">
        <% result.forEach(result => { %>
        <div class="col-md-4 my-3 mx-2">
          <div class="card Eachbox">
            <div class="card-body">
              <span
                style="
                  color: rgb(153, 146, 147);
                  font-size: 12px;
                "
                >Created By :
                <span style="color: rgb(94, 88, 88); text-transform: uppercase"
                  ><%= result.by %>
                </span></span
              ><hr />
              <h2 class="card-title text-success text-uppercase">
                <%= result.title %>
              </h2>

              <div class="card-subtitle text-muted my-2">
                <%= result.date.toLocaleDateString() %>
              </div>
              <p class="card-text body text-left text-dark">
                " <i><%= result.description %></i> "
              </p>
              <hr />
              <p class="card-text content">
                Content :
                <span class="font-weight-bold"> <%= result.content %> ...</span>
              </p>
              <div class="show mt-3">
                <% if(result.by == user.name) {%>
                <div class="show mt-3 d-inline">
                  <a href="/data/edit/<%= result._id %> " class="btn btn-warning my-2"
                    >Edit</a
                  >
                </div>
                <% } %>
                <a href="/data/show/<%= result._id %> " class="btn btn-primary"
                  >View Blog</a
                >
              </div>
            </div>
          </div>
        </div>
        <%}) %>
      </div>
    </div>

    <!-- END CODE HERE -->
    <%- include('../../partials/foot.ejs') %>
  </div>
</body>
